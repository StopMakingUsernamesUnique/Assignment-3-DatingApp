<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/Coffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/MainPad"
        android:text="@string/coffee_dates"
        android:textSize="@dimen/MainText" />

    <ImageView
        android:layout_width="@dimen/image2"
        android:layout_height="@dimen/image2"
        android:layout_marginLeft="@dimen/JavaMarginLeft"
        android:layout_marginTop="@dimen/JavaMarginTop"
        android:src="@drawable/coffee"
        />

    <TextView
        android:id="@+id/Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textSize="@dimen/SignUp"
        android:layout_marginLeft="@dimen/SignUpMarginLeft"
        android:layout_marginTop="@dimen/SignUpMarginTop"
        android:padding="@dimen/SignUpPad"/>

    <EditText
        android:id="@+id/Name"
        android:layout_width="@dimen/NameWidth"
        android:layout_height="@dimen/NameHeight"
        android:layout_marginLeft="@dimen/NameMargin"
        android:layout_marginTop="@dimen/Name_MarginTop"
        android:hint="@string/name"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/Age"
        android:inputType="number"
        android:layout_width="@dimen/AgeWidth"
        android:layout_height="@dimen/AgeHeight"
        android:layout_marginLeft="@dimen/AgeMargin"
        android:layout_marginTop="@dimen/Age_MarginTop"
        android:hint="@string/age"
        />

    <EditText
        android:id="@+id/Work"
        android:layout_width="@dimen/AgeWidth"
        android:layout_height="@dimen/AgeHeight"
        android:layout_marginLeft="@dimen/AgeMargin"
        android:layout_marginTop="@dimen/Work_MarginTop"
        android:hint="@string/place_of_work"

        />

    <EditText
        android:id="@+id/Bio"
        android:layout_width="@dimen/AgeWidth"
        android:layout_height="@dimen/AgeHeight"
        android:layout_marginLeft="@dimen/AgeMargin"
        android:layout_marginTop="@dimen/Bio_MarginTop"
        android:hint="@string/bio"
        />

    <Button
        android:layout_marginTop="@dimen/SubmitMarginTop"
        android:id="@+id/Submit"
        android:layout_width="@dimen/SubmitWidth"
        android:layout_height="@dimen/SubmitHeight"
        android:layout_marginLeft="@dimen/SubmitMarginLeft"
        android:layout_marginBottom="@dimen/SubmitMarginBottom"
        android:hint="@string/submit"
        android:onClick="toCheckValues" />




</RelativeLayout>
</ScrollView>


