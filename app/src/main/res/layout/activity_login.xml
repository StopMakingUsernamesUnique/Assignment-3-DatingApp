<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/java"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginLeft="55dp"

                android:src="@drawable/coffee"
                />

            <TextView
                android:id="@+id/Nameplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark Whalburg"
                android:textSize="25dp"
                android:layout_below="@id/java"
                android:layout_margin="30dp"
                />

            <TextView
                android:id="@+id/Ageplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/java"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentRight="true"
                android:text="46"
                android:layout_marginRight="60dp"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/Bioplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_me"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@id/Nameplate"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/Bioblock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_below="@id/Bioplate"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/Jobplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_field"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@id/Bioblock"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/Jobblock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_below="@id/Jobplate"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:layout_below="@id/Jobblock"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/Submit2"
                android:layout_marginLeft="125dp"
                android:layout_marginBottom="80dp"
                android:hint="@string/go_back"
                android:onClick="toMainActivity" />
        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>